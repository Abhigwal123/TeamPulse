# Environment Configuration Example
# Copy this file to .env and update the values

# Application
APP_NAME=Smart Scheduling SaaS
APP_VERSION=2.0.0
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# Database - SQLite (default, change path as needed)
DATABASE_URL=sqlite:///scheduling_system.db
# For absolute path: DATABASE_URL=sqlite:////absolute/path/to/scheduling_system.db

# Redis
REDIS_URL=redis://localhost:6379/0

# RabbitMQ
RABBITMQ_URL=amqp://scheduling_user:scheduling_password@localhost:5672//

# Celery
CELERY_BROKER_URL=amqp://scheduling_user:scheduling_password@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Google Cloud
GOOGLE_CREDENTIALS_FILE=service-account-creds.json
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=your-storage-bucket

# CORS
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://localhost:3000,https://localhost:3001

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.xlsx,.xls

# Task Processing
TASK_TIMEOUT=300
MAX_CONCURRENT_TASKS=5
